<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MyView">
        <attr name="brand_text" format="string" />
        <attr name="brand_text_size" format="dimension" />
        <attr name="brand_text_color" format="color" />
        <attr name="hour_hand_color" format="color" />
        <attr name="minute_hand_color" format="color" />
        <attr name="second_hand_color" format="color" />
    </declare-styleable>


    <declare-styleable name="ToggleButtonPlusMax">
        <attr name="toggle" format="string" />
    </declare-styleable>

    <declare-styleable name="ArcProgressView">
        <attr name="arcBackgroundColor" format="color" />
        <attr name="arcProgressColor" format="color" />
        <attr name="arcSubTitleColor" format="color" />
        <attr name="arcStrokeWidth" format="dimension" />
        <attr name="arcTitleTextSize" format="dimension" />
        <attr name="arcSubTitleTextSize" format="dimension" />
        <attr name="arcProgress" format="float" />
        <attr name="arcTitleNumber" format="integer" />
    </declare-styleable>

    <declare-styleable name="UnderLineTextview">
        <attr name="line_height" format="dimension" />
        <attr name="line_color" format="color|reference" />
        <attr name="is_line_weight" format="boolean" />
        <attr name="line_margin_top" format="dimension" />
    </declare-styleable>

    <!-- 仪表盘自定义属性 -->
    <declare-styleable name="ScienceBoardView">
        <!--刻度 字体颜色-->
        <attr name="sbDialColor" format="color" />
        <!--刻度 字体大小-->
        <attr name="sbDialTextSize" format="dimension" />
        <!--边框圆弧宽度-->
        <attr name="sbBorderWidth" format="dimension" />
        <!--仪表盘半径-->
        <attr name="sbRadius" format="dimension" />
        <!--中心数值 字体大小-->
        <attr name="sbValueTextSize" format="dimension" />
        <!--中心单位 字体大小-->
        <attr name="sbUnitTextSize" format="dimension" />
        <!--中心数值 字体颜色-->
        <attr name="sbValueTextColor" format="color" />
        <!--单位 名称-->
        <attr name="sbUnitName" format="string" />
        <!--数值改变 动画时长-->
        <attr name="sbAnimDuration" format="integer" />
    </declare-styleable>

    <!--  角标 -->
    <declare-styleable name="CornerMarkView">
        <attr name="cornerText" format="string" />
        <attr name="cornerTextSize" format="dimension" />
        <attr name="cornerTextColor" format="color" />
        <attr name="cornerBgColor" format="color" />
        <attr name="cornerBgWidth" format="dimension" />
        <attr name="cornerTriangle" format="dimension" />
        <attr name="cornerMode" format="enum">
            <enum name="top_left" value="0" />
            <enum name="top_right" value="1" />
            <enum name="bottom_left" value="2" />
            <enum name="bottom_right" value="3" />
            <enum name="top_left_triangle" value="4" />
            <enum name="top_right_triangle" value="5" />
            <enum name="bottom_left_triangle" value="6" />
            <enum name="bottom_right_triangle" value="7" />
        </attr>
    </declare-styleable>

    <!--分贝仪仪表盘-->
    <declare-styleable name="DecibelBoardView">
        <attr name="colorRoundRadius" format="dimension" />
        <attr name="currentLineRoundLength" format="dimension" />
        <attr name="currentValueTextSize" format="dimension" />
        <attr name="lineRoundLength" format="dimension" />
        <attr name="lineRoundStart" format="dimension" />
        <attr name="outsideRoundRadius" format="dimension" />
        <attr name="startAngle" format="float" />
        <attr name="lineRoundRadiusBgColor" format="color" />
        <attr name="lineRoundRadiusColor" format="color" />
    </declare-styleable>

    <!--圆形/圆角矩形ImageView-->
    <declare-styleable name="RoundImageView">
        <!-- 显示类型 -->
        <attr name="imageType" format="enum">
            <enum name="circle" value="0" />
            <enum name="round" value="1" />
        </attr>
        <!-- 边框大小 -->
        <attr name="borderWidthTwo" format="dimension" />
        <!-- 边框颜色 -->
        <attr name="borderColor" format="color" />
        <!-- 圆角大小 -->
        <attr name="roundRadius" format="dimension" />
        <!-- 是否可被按下 -->
        <attr name="isPressed" format="boolean" />
        <!-- 按下状态蒙层颜色 -->
        <attr name="coverColor" format="color" />
    </declare-styleable>

    <!--可以控制 drawable 大小的 TextView-->
    <declare-styleable name="DrawableTextView">
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />

        <attr name="drawableLeftWidth" format="dimension" />
        <attr name="drawableLeftHeight" format="dimension" />

        <attr name="drawableRightWidth" format="dimension" />
        <attr name="drawableRightHeight" format="dimension" />

        <attr name="drawableTopWidth" format="dimension" />
        <attr name="drawableTopHeight" format="dimension" />

        <attr name="drawableBottomWidth" format="dimension" />
        <attr name="drawableBottomHeight" format="dimension" />
    </declare-styleable>

    <!--彩色跑道 TextView-->
    <declare-styleable name="ColorTrackTextView2">
        <attr name="ctOriginTextColor" format="color" />
        <attr name="ctChangeTextColor" format="color" />
    </declare-styleable>
   <!-- 开关 -->
    <declare-styleable name="Switch">
        <attr name="OnColor" format="color"/>
        <attr name="OffColor" format="color"/>
        <attr name="InsideOnColor" format="color"/>
        <attr name="InsideOffColor" format="color"/>
        <attr name="BackColor" format="color"/>
        <attr name="SwitchPadding" format="dimension"/>
        <attr name="InsidePadding" format="dimension"/>
        <attr name="radius" format="dimension"/>
        <attr name="switchOn" format="boolean"/>
        <attr name="durations" format="integer"/>
        <attr name="customTriger" format="reference"/>
        <attr name="allowAnim" format="boolean"/>
    </declare-styleable>
<!--  RatingBar  -->
    <declare-styleable name="RatingBar">
        <attr name="starNormal" format="reference"/>
        <attr name="starFocus" format="reference"/>
        <attr name="gradeNumber" format="integer"/>
        <attr name="starHorizontalPadding" format="dimension"/>
        <attr name="starVerticalPadding" format="dimension"/>
    </declare-styleable>
<!--CusTextView-->
    <declare-styleable name="CusTextView">

        <attr name="customText" format="string" />
        <attr name="customTextSize" format="dimension" />
        <attr name="customTextColor" format="reference|color" />

        <attr name="customInputType">
            <enum name="number" value="1" />
            <enum name="password" value="2" />
            <enum name="text" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="QQStepView">
        <attr name="outerColor" format="reference|color" />
        <attr name="innerColor" format="reference|color" />
        <attr name="borderWidth" format="dimension" />
        <attr name="stepTextSize" format="dimension" />
        <attr name="stepTextColor" format="reference|color" />
    </declare-styleable>

    <declare-styleable name="ColorTrackTextView3">
        <attr name="originColor" format="color" />
        <attr name="changeColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="circleProgressOuterColor" format="reference|color" />
        <attr name="circleProgressInnerColor" format="reference|color" />
        <attr name="circleProgressBorderWidth" format="dimension" />
        <attr name="progressPercentColor" format="reference|color" />
        <attr name="progressTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LetterSideBar">
        <attr name="textSize" format="dimension"/>
        <attr name="textOriginColor" format="color"/>
        <attr name="textChangeColor" format="color"/>
    </declare-styleable>


    <declare-styleable name="DrawableTextView2">
        <attr name="drawable_src" format="reference" />
        <attr name="drawable_height" format="dimension" />
        <attr name="drawable_width" format="dimension" />
        <attr name="drawable_location">
            <enum name="left" value="1" />
            <enum name="top" value="2" />
            <enum name="right" value="3" />
            <enum name="bottom" value="4" />
        </attr>
    </declare-styleable>


<!--    /////////////////////////////////-->


</resources>
